{
    "info": {
        "_postman_id": "orius-tools-api",
        "name": "Orius Tools API - Ferramentas para Equipe orius",
        "description": "Coleção para testar os endpoints de conversão de PDF para JSON do sistema de cartório.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Converter Receita SEE (OCR)",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "pdf",
                            "type": "file",
                            "description": "Selecione o arquivo PDF da Receita (ex: receita_estrela_do_norte...pdf)"
                        }
                    ]
                },
                "url": {
                    "raw": "{{base_url}}/api/converter/receita-see",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "converter",
                        "receita-see"
                    ]
                },
                "description": "Este endpoint recebe o PDF da Receita do SEE (que geralmente é uma imagem digitalizada), aplica OCR usando Tesseract e retorna os registros em JSON."
            },
            "response": []
        },
        {
